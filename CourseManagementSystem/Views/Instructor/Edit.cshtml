@model Instructor
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post" action=" /Instructor/SaveEdit/@Model.Id">
    <div>
        <label>Name</label>
        <input type="text" name="Name" id="Name" value="@Model.Name" class="form-control" />
    </div>

    <div>
        <label>Img</label>
        <input type="text" name="Img" id="Img" value="@Model.Img" class="form-control" />
    </div>

    <div>
        <label>Salary</label>
        <input type="number" name="Salary" id="Salary" value="@Model.Salary" class="form-control" />
    </div>

    <div>
        <label>Department</label>
        @* <input type="number" name="DepartmentId" class="form-control" /> *@
        <select name="DepartmentId" id="DepartmentId" class="form-control">
            @foreach (Department deptItem in ViewBag.DeptList)
            {
                if (Model.DepartmentId == deptItem.Id)
                {
                    <option value="@deptItem.Id" selected>@deptItem.Name</option>
                }
                else
                {
                    <option value="@deptItem.Id">@deptItem.Name</option>
                }            
            }
        </select>
    </div>

    <div>
        <label>Course</label>
        @* <input type="number" name="CourseId" class="form-control" /> *@
        <select name="CourseId" id="CourseId" class="form-control">
            @foreach (Course crsItem in ViewBag.CourseList)
            {
                if(Model.CourseId == crsItem.Id)
                {
                    <option value="@crsItem.Id" selected>@crsItem.Name</option>
                }
                else
                {
                    <option value="@crsItem.Id">@crsItem.Name</option>
                }
            }
        </select>
    </div>

    <input type="submit" value="Edit" class="btn btn-success" />
</form>