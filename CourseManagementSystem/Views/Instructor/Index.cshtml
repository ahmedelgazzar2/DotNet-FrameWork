@model List<Instructor>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div style="border:3px solid blue" id="InstructorDetails">

</div>
<table class="table table-bordered table-hover">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Image</th>
        <th>Salary</th>
        <th>Details</th>
        <th>Edit</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td> <a href="#" onclick="GetData(@item.Id)"> @item.Name </a></td>
            <td><img src="/Images/@item.Img" style="width:100px" /></td>
            <td>@item.Salary</td>
            <td>
                <a href="/Instructor/Details/@item.Id" class="btn btn-primary">Details</a>
            </td>
            <td>
                <a href="/Instructor/Edit/@item.Id" class="btn btn-primary">Edit</a>
            </td>
        </tr>
    }
</table>
<a href="/Instructor/New" class="btn btn-primary">Add</a>

<script>
    function GetData(InsId)
    {
        event.preventDefault();
        //Ajax Call
            $.ajax({
                url: "/Instructor/GetPartialData/"+InsId,
                success: function(result){
                    console.log(result);
                    document.getElementById("InstructorDetails").innerHTML = result;
                }
            });
        
    }
</script>

