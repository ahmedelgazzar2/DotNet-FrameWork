@model List<Trainee>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-bordered table-hover">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Image</th>
        <th>Details</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td> @item.Name</td>
            <td><img src="/Images/@item.Img" style="width:100px" /></td>
            <td><a href="/Trainee/Details/@item.Id" class="btn btn-primary">Details</a></td>
        </tr>
    }
</table>
<a href="/Trainee/New" class="btn btn-primary">Add</a>