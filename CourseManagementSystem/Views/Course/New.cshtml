@model Course
@{
    ViewData["Title"] = "New";
    SelectList DeptList = new SelectList(ViewBag.DropDowenList, "Id", "Name");
}

<h1>New</h1>

<form asp-action="SaveNew" asp-controller="Course">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Degree"></label>
        <input class="form-control" asp-for="Degree" />
        <span asp-validation-for="Degree" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="MinDegree"></label>
        <input class="form-control" asp-for="MinDegree" />
        <span asp-validation-for="MinDegree" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Department"></label>
        <select class="form-control" asp-for="DepartmentId" asp-items="DeptList" >
            <option value="0">Select Department</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <input type="submit" value="Add" class="btn btn-success" />
</form>

@section Scripts {
    @* <script src="~/lib/jquery/dist/jquery.js"></script> *@
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
