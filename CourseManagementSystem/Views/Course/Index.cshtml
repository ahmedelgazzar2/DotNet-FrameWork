@model List<Course>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

    <table class="table table-bordered table-hover">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Degree</th>
            <th>MinDegree</th>
            <th>Department</th>
            <th>Edit</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Degree</td>
                <td>@item.MinDegree</td>
                <td>@item.Department.Name</td>
                <td>
                    <a href="/Course/Edit/@item.Id" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </table>
    <a href="/Course/New" class="btn btn-primary">Add</a>
